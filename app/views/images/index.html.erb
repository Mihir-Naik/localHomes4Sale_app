<div class="container-fluid text-center">
  <div class="row">
    <div class="col-2"></div>
      <div class="col-8">
          <h3 class="bg-secondary border border-danger rounded">More photos for <%= @property.address %> </h3>
          <% @property.images.each do |i| %>
          <div class="border border-danger">
              <p style="font-size: 2rem;"><%= link_to i.caption, property_image_path(i.property.id, i.id) %></p>
              <%= image_tag i.picture.url, :style => "max-width: 100%;" %>
          </div>
          <hr class="border border-danger">
          <% end %>
        <div>
            <p class="btn btn-outline-danger btn-lg"><%= link_to 'Go Back', property_path(@property) %></p>
        </div>
      </div>
    <div class="col-2"></div>
  </div>
</div>