<div>
    <h1>LocalHomes4Sale</h1>
    <div>
        <% if logged_in? %>
            <p> <%= link_to "Hi #{current_user.name}!", user_path(current_user) %> </p>
            <button> <%= link_to 'Log Out', logout_path, method: 'delete' %> </button>
            <button> <%= link_to 'Edit Account', edit_user_path(@user) %> </button>
        <% else %>
            <button> <%= link_to 'Sign Up', new_user_path %> </button>
            <button> <%= link_to 'Log In', new_session_path %> </button>
        <% end %>
    </div>
    <hr>
</div>