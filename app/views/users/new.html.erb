<h1>Create new account: </h1>

<%= form_for @user do |f| %>
    <div class="form-group">
            <%= f.label :name, 'Full Name*', class: '' %>
            <%= f.text_field :name, class: 'form-control', placeholder: "`John Doe`" %>
    </div>
    <div class="form-group">
            <%= f.label :phone, 'Phone', class: ''%>
            <%= f.text_field :phone, class: "form-control", placeholder: "`1234567890`" %>
    </div>
    <div class="form-group">
            <%= f.label :address, 'Address', class: ''%>
            <%= f.text_field :address, class: "form-control", placeholder: "`Street Address, City, State, ZipCode`" %>
    </div>
    <div class="form-group">
            <%= f.label :email, 'Email*', class: ''%>
            <%= f.text_field :email, class: "form-control", placeholder: "`email@domain.com`" %>
    </div>
    <div class="form-group">
            <%= f.label :password, 'Password*', class: ''%>
            <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="form-group">
            <%= f.label :password_confirmation, 'Confirm Password*', class: ''%>
            <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
    <div>
            <%= f.submit 'Sign Up', class: "btn btn-success"%>
    </div>
<% end %> 
<%= render 'layouts/partials/footer' %>