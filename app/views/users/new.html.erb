<h1>Create Account: </h1>

<%= form_for @user do |f| %>
    <div>
            <%= f.label :name, 'Full Name*', class: ''%>
            <%= f.text_field :name %>
    </div>
    <div>
            <%= f.label :phone, 'Phone', class: ''%>
            <%= f.text_field :phone %>
    </div>
    <div>
            <%= f.label :address, 'Address', class: ''%>
            <%= f.text_field :address %>
    </div>
    <div>
            <%= f.label :email, 'Email*', class: ''%>
            <%= f.text_field :email %>
    </div>
    <div>
            <%= f.label :password, 'Password*', class: ''%>
            <%= f.text_field :password %>
    </div>
    <div>
            <%= f.label :password_confirmation, 'Confirm Password*', class: ''%>
            <%= f.text_field :password_confirmation %>
    </div>
    <div>
            <%= f.submit 'Sign Up'%>
    </div>
<% end %> 

