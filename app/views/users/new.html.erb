<div class="container-fluid text-center">
    <h1 style="margin: 50px;">Create new account: </h1>
        <div class="row">
                <div class="col-2"></div>
                <div class="col-8">
                    <%= form_for @user do |f| %>
                        <div class="form-group">
                                <%= f.label :name, 'Full Name*', class: '' %>
                                <%= f.text_field :name, class: 'form-control text-center', placeholder: "Your Full Name" %>
                        </div>
                        <div class="form-group">
                                <%= f.label :phone, 'Phone', class: ''%>
                                <%= f.text_field :phone, class: 'form-control text-center', placeholder: "Your Phone number" %>
                        </div>
                        <div class="form-group">
                                <%= f.label :address, 'Address', class: ''%>
                                <%= f.text_field :address, class: 'form-control text-center', placeholder: "Your Street Address, City, State, ZipCode" %>
                        </div>
                        <div class="form-group">
                                <%= f.label :email, 'Email*', class: ''%>
                                <%= f.text_field :email, class: 'form-control text-center', placeholder: "your-email@example.com" %>
                        </div>
                        <div class="form-group">
                                <%= f.label :password, 'Password*', class: ''%>
                                <%= f.password_field :password, class: 'form-control text-center',placeholder: "Choose something secure" %>
                        </div>
                        <div class="form-group">
                                <%= f.label :password_confirmation, 'Confirm Password*', class: ''%>
                                <%= f.password_field :password_confirmation, class: 'form-control text-center',placeholder: "Confirm your password" %>
                        </div>
                        <div>
                                <%= f.submit 'Sign Up', class: "btn btn-success btn-lg"%>
                        </div>
                    <% end %> 
                </div>
                <div class="col-2"></div>
        </div>
<%= render 'layouts/partials/footer' %>
</div>
