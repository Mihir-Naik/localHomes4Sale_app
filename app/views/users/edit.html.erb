<h1>Edit your profile</h1>

<%= form_for @user do |f| %>
    <div>
            <%= f.label :name, 'Full Name*', class: ''%>
            <%= f.text_field :name %>
    </div>
    <div>
            <%= f.label :phone, 'Phone', class: ''%>
            <%= f.text_field :phone %>
    </div>
    <div>
            <%= f.label :address, 'Address', class: ''%>
            <%= f.text_field :address %>
    </div>
    <div>
            <%= f.label :email, 'Email*', class: ''%>
            <%= f.text_field :email %>
    </div>
    <div>
            <%= f.label :password, 'Password*', class: ''%>
            <%= f.password_field :password %>
    </div>
    <div>
            <%= f.label :password_confirmation, 'Confirm Password*', class: ''%>
            <%= f.password_field :password_confirmation %>
    </div>
    <div>
            <%= f.submit 'Save changes'%>
    </div>
<% end %> 

<div>
    <button>
            <%= link_to 'Delete Account', new_user_path, data: {confirm: "Are you sure?"}, method: :delete %>
    </button>
</div>
