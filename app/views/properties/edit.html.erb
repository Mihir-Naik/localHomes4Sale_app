<h1>Properties#edit</h1>

<%= form_for @property do |f| %>
<div class="form-group">
        <%= f.label :price, 'Sale Price($): '%>
        <%= f.text_field :price, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :address, 'Address: '%>
        <%= f.text_field :address, class: 'form-control'  %>
    </div>
    <div class="form-group">
        <%= f.label :sq_footage, 'Square Footage: '%>
        <%= f.text_field :sq_footage, class: 'form-control'  %>
    </div>
    <div class="form-group">
        <%= f.label :no_of_bedroom, 'No. of Bedroom: '%>
        <%= f.number_field :no_of_bedroom, class: 'form-control'  %>
    </div>
    <div class="form-group">
        <%= f.label :no_of_bathroom, 'No. of Bathroom: '%>
        <%= f.number_field :no_of_bathroom, class: 'form-control'  %>
    </div>
    <div class="form-group">
        <%= f.label :description, 'Description: '%>
        <%= f.text_area :description, class: 'form-control'  %>
    </div>
    <div class="form-group">
        <%= f.label :image, 'Image Link: '%>
        <%= f.text_field :image, class: 'form-control'  %>
    </div>
<div class="form-group">
    <%= f.submit 'Save Changes', class: 'btn btn-success' %>
</div>
<% end %>

<div class="form-group">
        <%= link_to 'Delete Property', property_path, data: {confirm: "Are you sure?"}, method: :delete, class: 'btn btn-danger' %>
</div>