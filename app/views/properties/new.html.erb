<h1>Let's sell your property!!!</h1>
<h3 class="text-muted">Fill out the following:</h3>

<%= form_for @property do |f| %>
<div class="form-group">
    <%= f.label :price, 'Sale Price($): '%>
    <%= f.text_field :price, class: 'form-control' %>
</div>
<div class="form-group">
    <%= f.label :address, 'Address: '%>
    <%= f.text_field :address, class: 'form-control'  %>
</div>
<div class="form-group">
    <%= f.label :sq_footage, 'Square Footage: '%>
    <%= f.text_field :sq_footage, class: 'form-control'  %>
</div>
<div class="form-group">
    <%= f.label :no_of_bedroom, 'No. of Bedroom: '%>
    <%= f.number_field :no_of_bedroom, class: 'form-control'  %>
</div>
<div class="form-group">
    <%= f.label :no_of_bathroom, 'No. of Bathroom: '%>
    <%= f.number_field :no_of_bathroom, class: 'form-control'  %>
</div>
<div class="form-group">
    <%= f.label :description, 'Description: '%>
    <%= f.text_area :description, class: 'form-control'  %>
</div>
<div class="form-group">
    <%= f.label :image_file, 'Image Link: '%>
    <%= f.file_field :image_file, class: 'form-control'  %>
</div>
<div class="form-group">
    <%= f.submit 'Post', class: 'btn btn-success' %>
</div>
<% end %>

