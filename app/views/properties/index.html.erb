<!-- <h3 class="text-center"><strong> Listings </strong></h3> -->
<hr class="border border-danger">
<div class="container-fluid">
    <div class="row justify-content-center text-center">
        <% @properties.each do |p| %>
            <div class="col-sm-4">
                <div class="card bg-light mb-3 border border-danger rounded" style="max-width: 30rem;">
                    <div class="list-group list-group-flush">
                        <img src="<%= p.image_file %>" alt="" class="card-img-top" style="max-height: 300px;" >
                        <div class="card-body"> 
                            <h4 class="card-title">Address: <%= p.address %></h4>
                            <p class="card-text">Price($): <%= p.price %></p>
                            <p class="card-link"><%= link_to 'More details here', property_path(p.id) %></p>
                        </div>
                        <div class="card-body">
                            <p class="card-link">Listing provided by: <%= link_to p.user.name, user_path(p.user) %> about <%= time_ago_in_words p.created_at %></p>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>
<hr class="border border-danger">